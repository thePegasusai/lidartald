# Required: Environment setting for application behavior
NODE_ENV=development

# Required: Server port number (default: 3000)
PORT=3000

# Required: Server host address (default: 0.0.0.0)
HOST=0.0.0.0

# Database Configuration
# Required: SQLite database URL with file path
DATABASE_URL=file:./dev.db

# Required: Redis connection URL for caching and session management
REDIS_URL=redis://localhost:6379

# Required: Redis key prefix for TALD UNIA namespace
REDIS_KEY_PREFIX=tald:

# Required: Data retention period in days (default: 7)
REDIS_RETENTION_DAYS=7

# WebSocket Configuration
# Required: WebSocket server port for fleet communication
WS_PORT=8080

# Required: WebSocket server host address
WS_HOST=0.0.0.0

# Required: Maximum concurrent fleet connections (default: 32)
WS_MAX_CONNECTIONS=32

# Required: WebSocket heartbeat interval in milliseconds
WS_HEARTBEAT_INTERVAL=30000

# Required: WebSocket reconnection attempt interval
WS_RECONNECT_INTERVAL=5000

# Required: WebSocket message timeout threshold
WS_MESSAGE_TIMEOUT=10000

# Required: Enable TLS for secure WebSocket communication
WS_TLS_ENABLED=true

# OAuth Configuration
# Required: OAuth 2.0 client identifier
OAUTH_CLIENT_ID=your_client_id

# Required: OAuth 2.0 client secret
OAUTH_CLIENT_SECRET=your_client_secret

# Required: Access token lifetime in seconds (default: 1 hour)
OAUTH_ACCESS_TOKEN_LIFETIME=3600

# Required: Refresh token lifetime in seconds (default: 7 days)
OAUTH_REFRESH_TOKEN_LIFETIME=604800

# Security Configuration
# Required: JWT signing secret (min 64 characters)
JWT_SECRET=min_64_char_secure_random_string

# Required: AES-256-GCM encryption key (32 bytes)
ENCRYPTION_KEY=32_byte_aes_256_key

# Required: TLS certificate path for secure communication
TLS_CERT_PATH=/path/to/tls/cert.pem

# Required: TLS private key path for secure communication
TLS_KEY_PATH=/path/to/tls/key.pem

# LiDAR Core Configuration
# Required: LiDAR scan rate in Hz (default: 30)
LIDAR_SCAN_RATE=30

# Required: LiDAR resolution in centimeters (default: 0.01)
LIDAR_RESOLUTION=0.01

# Required: LiDAR range in meters (default: 5)
LIDAR_RANGE=5

# Required: LiDAR buffer size in bytes (default: 1MB)
LIDAR_BUFFER_SIZE=1048576

# Monitoring Configuration
# Required: Application logging level
LOG_LEVEL=info

# Required: Enable Prometheus metrics collection
METRICS_ENABLED=true

# Required: Metrics server port for Prometheus scraping
METRICS_PORT=9090

# Required: Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn